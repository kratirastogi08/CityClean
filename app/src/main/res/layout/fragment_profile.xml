<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Profile">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bar">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/propic"
            android:layout_width="103dp"
            android:layout_height="117dp"
            android:layout_marginBottom="41dp"
            android:layout_marginEnd="239dp"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="239dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="42dp"

            android:src="@mipmap/profilepicture"
         android:backgroundTint="#fbfbfc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="174dp"
            android:layout_height="35dp"
            android:layout_marginBottom="89dp"
            android:layout_marginEnd="44dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="44dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="76dp"
            android:textColor="#ffffff"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/propic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="207dp"
            android:layout_height="27dp"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="42dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="42dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/propic"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="136dp"
            android:background="@null"
            android:text="Edit"
            android:textColor="#fdfdfd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>


    <Button
        android:id="@+id/homechange"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginBottom="104dp"


        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:background="@null"
        android:text="Change"
        android:textColor="#fdc704"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeaddress" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="294dp"
        android:layout_height="81dp"
        android:layout_marginBottom="167dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeaddress">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Enter new Address" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/homeaddress"
        android:layout_width="267dp"
        android:layout_height="34dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout5"
        app:layout_constraintEnd_toStartOf="@+id/homechange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.97" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginBottom="159dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:text="SAVE"
        android:textColor="#fdc704"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout5"
        app:layout_constraintTop_toBottomOf="@+id/homechange" />


</android.support.constraint.ConstraintLayout>



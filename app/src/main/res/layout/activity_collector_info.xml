<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectorInfo">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="361dp"
        android:layout_height="150dp"
        android:layout_marginBottom="451dp"
        android:layout_marginEnd="211dp"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="211dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text"
                android:layout_width="303dp"
                android:layout_height="52dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="26dp"
                android:text="Next Schedule"
                android:textSize="30dp"
                android:textColor="#000306"


                app:fontFamily="@font/baloo_bhai"

                app:layout_constraintBottom_toTopOf="@+id/date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:layout_marginBottom="17dp"
                android:layout_marginEnd="144dp"
                android:layout_marginRight="144dp"
                android:layout_marginTop="10dp"
                android:text="No data available"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.962"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text" />
        </android.support.constraint.ConstraintLayout>



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="362dp"
        android:layout_height="154dp"
        android:layout_marginBottom="340dp"
         android:id="@+id/card"
        android:visibility="invisible"
        android:layout_marginEnd="100dp"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/propic"
                android:layout_width="70dp"
                android:layout_height="77dp"
                android:layout_marginBottom="41dp"
                android:layout_marginEnd="239dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="239dp"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"

                android:src="@mipmap/profilepicture"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="91dp"
                android:layout_marginEnd="163dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="163dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="44dp"
                android:text="No data available"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/propic"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/numplate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="163dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="163dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="4dp"
                android:text="No data available"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toTopOf="@+id/number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/propic"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:layout_marginEnd="163dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="163dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="5dp"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/propic"
                app:layout_constraintTop_toBottomOf="@+id/numplate" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/car"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="211dp"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="211dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="13dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintVertical_bias="0.285">

        <android.support.constraint.ConstraintLayout
            android:layout_width="364dp"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="274dp"
                android:layout_marginLeft="83dp"
                android:layout_marginRight="21dp"
                android:layout_marginStart="83dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.73" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="will arrive today at"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/nam"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.114" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="16dp"
                android:layout_marginEnd="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginTop="16dp"
                android:text="TextView"
                android:textColor="#000306"
                android:textSize="20sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toTopOf="@+id/mobno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.986"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6" />


            <TextView
                android:id="@+id/mobno"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:text="TextView"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/time" />

            <TextView
                android:id="@+id/plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000306"
                android:textSize="15sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView11"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintVertical_bias="0.73" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:text="Vehicle No:"
                android:textColor="#000306"
                android:textSize="12sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/plate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nam" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="Mobile No:"
                android:textColor="#000306"
                android:textSize="12sp"
                app:fontFamily="@font/baloo_bhai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/mobno"
                app:layout_constraintStart_toEndOf="@+id/plate" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textmsg"
        android:layout_width="195dp"
        android:layout_height="18dp"
        android:layout_marginEnd="95dp"
        android:layout_marginLeft="94dp"
        android:layout_marginRight="95dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="17dp"
        android:text="No data available"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

</android.support.constraint.ConstraintLayout>